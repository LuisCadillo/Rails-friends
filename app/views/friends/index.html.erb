<h1>Friends</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>User name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.user_name %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.email %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Show', friend, class: 'btn btn-light'%></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class: 'btn btn-light' %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-light' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:'btn btn-primary' %>
